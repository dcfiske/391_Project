	        						 "DOCTOR_ID = '" + doctorId + "', " +
	        						 "address = '" + address + "', " +
	        						 "email = '" + email + "', " +
	        						 "phone = '" + phone + "' " +
	        	 "WHERE person_id = '" + personID + "'";
	try
	{
	    stmt = conn.createStatement();
	    rset = stmt.executeQuery(sql);
	} catch (Exception ex)
	{
	    out.println("<hr>" + ex.getMessage() + "<hr>");
	}
	
	try
	{
	    conn.close();
	} catch (Exception ex)
	{
